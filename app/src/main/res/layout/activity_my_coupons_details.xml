<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notification.MyCouponsDetails">
    <include
        android:id="@+id/tool"
        layout="@layout/custom_toolbar"></include>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_below="@+id/tool"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_discount"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="#fc2b3c"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/dashed_background">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="15dp"
                    android:src="@drawable/circular_logo" />


                <TextView
                    android:id="@+id/tv_discount_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentTop="true"

                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:gravity="center"
                    android:text="@string/discount_text"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="38dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_discount_tag"
                    android:layout_marginTop="-3dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/georgia_bold"
                    android:gravity="center"
                    android:text="20% - 30% "
                    android:textColor="@color/white"
                    android:textSize="50dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_momo_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_discount"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/mimo_discount"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="26dp" />

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/tv_momo_discount"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    android:layout_marginTop="25dp"
                    android:background="@color/white"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/claim_now"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="18dp" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_desc"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray"></View>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/coupon_number"
    android:layout_gravity="center"
    android:gravity="center"
    android:textColor="@color/black"
    android:layout_marginTop="@dimen/padding_10"
    android:textSize="16dp"
    />
        <TextView
            android:id="@+id/tv_coupon_number"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shop_name"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/padding_10"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tv_shop_name"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shop_description"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/padding_10"
            android:textSize="16dp"
            />
        <TextView
            android:id="@+id/tv_shop_desc"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray"></View>
        <TextView
            android:id="@+id/tv_claimer"
android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/five_dp"
            android:fontFamily="@font/georgia_bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="20dp"
            android:text="@string/claimer_list"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_claimer_list"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</RelativeLayout>