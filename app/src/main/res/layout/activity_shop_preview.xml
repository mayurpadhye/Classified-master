<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/white_smoke">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="280dp"
                    android:background="@color/white_smoke">


                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="fill_parent"
                        android:layout_height="280dp"
                        android:layout_alignParentTop="true" />

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:gravity="bottom"
                        android:padding="@dimen/padding_10"
                        app:centered="true"
                        app:pageColor="#FF0000"
                        app:snap="false" />

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/padding_10"
                        android:padding="5dp"
                        android:src="@drawable/ic_back_arrow_white" />

                    <TextView
                        android:id="@+id/tv_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="46dp"
                        android:drawableLeft="@drawable/gallery"
                        android:text=""

                        android:textColor="@color/white" />
                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="255dp"
                    android:layout_marginBottom="-15dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="@dimen/padding_10">

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"

                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_10"
                            android:background="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"></LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/padding_10"
                                    android:layout_marginTop="5dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="0.2"
                                        android:orientation="vertical"

                                        >

                                        <TextView
                                            android:id="@+id/tv_shop_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:text="Gionee Furniture"
                                            android:textColor="@color/black"
                                            android:textSize="20dp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tv_website"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:text="www.bestdeal.com"
                                            android:textColor="@color/blue"
                                            android:textSize="13dp"


                                            />

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            android:layout_marginTop="5dp"
                                            android:layout_marginBottom="@dimen/padding_10">

                                            <RelativeLayout
                                                android:id="@+id/rl_price"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"

                                                >

                                                <ImageView
                                                    android:id="@+id/iv_currency"
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"

                                                    android:src="@drawable/yen_brown" />

                                                <TextView
                                                    android:id="@+id/tv_price_range"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:layout_marginLeft="2dp"
                                                    android:layout_toRightOf="@+id/iv_currency"
                                                    android:text="120-300"
                                                    android:textColor="#755252"
                                                    android:textSize="12dp"

                                                    />
                                            </RelativeLayout>

                                            <View
                                                android:id="@+id/view"
                                                android:layout_width="0.1dp"
                                                android:layout_height="15dp"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="4dp"
                                                android:layout_marginRight="4dp"
                                                android:layout_toRightOf="@+id/rl_price"
                                                android:background="@color/gray"></View>

                                            <RelativeLayout
                                                android:id="@+id/rl_discount"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginRight="10dp"

                                                android:layout_toRightOf="@+id/view">

                                                <ImageView
                                                    android:id="@+id/iv_discount"
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:padding="3dp"
                                                    android:src="@drawable/percentage" />

                                                <TextView
                                                    android:id="@+id/tv_dis"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:layout_toRightOf="@+id/iv_discount"
                                                    android:text="@string/discount"
                                                    android:textSize="10dp"

                                                    />

                                                <TextView
                                                    android:id="@+id/tv_discount"

                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:layout_marginLeft="2dp"
                                                    android:layout_toRightOf="@+id/tv_dis"
                                                    android:text="30%"
                                                    android:textColor="#755252"
                                                    android:textSize="12dp"

                                                    />
                                            </RelativeLayout>
                                        </RelativeLayout>

                                    </LinearLayout>


                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:layout_weight="0.6"
                                        android:background="@drawable/button_red_holo"
                                        android:text="@string/upgrade_to_premimum"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="12dp"
                                        android:visibility="gone" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:layout_weight="0.8"
                                        android:gravity="start"
                                        android:orientation="vertical">

                                        <RelativeLayout
                                            android:id="@+id/rl_rating"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"

                                            android:layout_marginTop="5dp"


                                            android:gravity="center">

                                            <RelativeLayout
                                                android:layout_width="48dp"
                                                android:layout_height="20dp"
                                                android:visibility="gone"
                                                android:background="@drawable/btn_rounded">

                                                <com.romainpiel.shimmer.ShimmerTextView
                                                    android:id="@+id/tv_avg_rating"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerVertical="true"
                                                    android:layout_marginLeft="5dp"
                                                    android:text="4.4"

                                                    android:textColor="@color/white"
                                                    android:textSize="12dp" />


                                                <ImageView
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"
                                                    android:layout_marginLeft="3dp"
                                                    android:layout_toRightOf="@+id/tv_avg_rating"
                                                    android:padding="5dp"
                                                    android:src="@drawable/star" />

                                            </RelativeLayout>

                                        </RelativeLayout>

                                        <Button
                                            android:id="@+id/btn_follow"
                                            android:layout_width="60dp"
                                            android:layout_height="25dp"
                                            android:visibility="gone"
                                            android:layout_gravity="right"
                                            android:layout_marginTop="10dp"
                                            android:background="@drawable/button_rounded_blue"
                                            android:text="Follow"
                                            android:textAllCaps="false"
                                            android:textColor="@color/white"
                                            android:textSize="13dp" />

                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <android.support.design.widget.TabLayout
                                    android:id="@+id/tabs"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="@dimen/padding_10"
                                    android:layout_marginRight="@dimen/padding_10"
                                    android:visibility="gone"
                                    app:tabMode="scrollable"

                                    app:tabTextAppearance="@style/MyCustomTextAppearance">

                                </android.support.design.widget.TabLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/gray"></View>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_marginBottom="@dimen/padding_10">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <RelativeLayout
                                            android:id="@+id/rl_direction"
                                            android:layout_width="match_parent"
                                            android:layout_height="35dp"
                                            android:layout_marginLeft="@dimen/padding_10"
                                            android:layout_weight="0.33"
                                            android:gravity="center"


                                            >

                                            <ImageView
                                                android:id="@+id/iv_direction"
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:layout_centerVertical="true"
                                                android:padding="4dp"
                                                android:src="@drawable/direction" />

                                            <TextView
                                                android:id="@+id/tv_direction"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="5dp"
                                                android:layout_toRightOf="@+id/iv_direction"
                                                android:text="Direction"
                                                android:textColor="@color/black"
                                                android:textSize="11dp"

                                                />

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="5dp"
                                                android:layout_alignParentBottom="true"
                                                android:layout_marginRight="@dimen/padding_10"
                                                android:layout_toRightOf="@+id/iv_direction"
                                                android:layerType="software"
                                                android:src="@drawable/dashed_line"></ImageView>
                                        </RelativeLayout>

                                        <View
                                            android:id="@+id/view1"
                                            android:layout_width="0.1dp"
                                            android:layout_height="15dp"
                                            android:layout_centerVertical="true"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="4dp"
                                            android:layout_toRightOf="@+id/rl_direction"
                                            android:background="@color/gray"></View>

                                        <RelativeLayout
                                            android:id="@+id/rl_review"
                                            android:layout_width="match_parent"
                                            android:layout_height="35dp"
                                            android:layout_marginLeft="@dimen/padding_10"
                                            android:layout_marginRight="10dp"
                                            android:layout_toRightOf="@+id/view1"
                                            android:layout_weight="0.33">

                                            <ImageView
                                                android:id="@+id/iv_review"
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:padding="4dp"
                                                android:src="@drawable/review" />

                                            <TextView
                                                android:id="@+id/tv_review"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_centerVertical="true"
                                                android:layout_marginLeft="2dp"
                                                android:layout_toRightOf="@+id/iv_review"
                                                android:text="@string/review"
                                                android:textColor="@color/black"
                                                android:textSize="11dp"

                                                />

                                            <ImageView
                                                android:layout_width="match_parent"
                                                android:layout_height="5dp"
                                                android:layout_alignParentBottom="true"
                                                android:layout_toRightOf="@+id/iv_review"
                                                android:layerType="software"
                                                android:src="@drawable/dashed_line"></ImageView>
                                        </RelativeLayout>

                                        <View
                                            android:id="@+id/view2"
                                            android:layout_width="0.1dp"
                                            android:layout_height="15dp"
                                            android:layout_centerVertical="true"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="4dp"
                                            android:layout_marginRight="4dp"
                                            android:layout_toRightOf="@+id/rl_review"
                                            android:background="@color/gray"></View>

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="35dp"
                                            android:layout_weight="0.33"
                                            android:gravity="center">

                                            <ImageView
                                                android:id="@+id/iv_phone"
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:layout_marginLeft="@dimen/padding_10"
                                                android:padding="2dp"
                                                android:src="@drawable/phone" />

                                        </RelativeLayout>
                                    </LinearLayout>


                                </RelativeLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.1dp"
                                    android:background="@color/gray"></View>

                                <LinearLayout
                                    android:id="@+id/ll_highlight"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/padding_10"
                                    android:orientation="vertical"
                                    android:visibility="visible">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="@string/description"
                                        android:textSize="16dp"
                                        android:visibility="gone" />

                                    <mimosale.com.helperClass.ExpandableTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:drawableRight="@drawable/ic_down_arrow"
                                        android:gravity="start"
                                        android:lineSpacingExtra="2dp"
                                        android:minLines="1"
                                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
                                        android:textSize="13dp"
                                        android:visibility="gone" />

                                    <com.ms.square.android.expandabletextview.ExpandableTextView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/expand_text_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="?attr/selectableItemBackground"
                                        android:clickable="true"
                                        expandableTextView:animDuration="200"
                                        expandableTextView:maxCollapsedLines="4">

                                        <TextView
                                            android:id="@id/expandable_text"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:lineSpacingExtra="2dp"
                                            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum"
                                            android:textColor="#666666"
                                            android:textSize="13sp" />

                                        <ImageButton
                                            android:id="@id/expand_collapse"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="right|bottom"

                                            android:background="@android:color/transparent"
                                            android:padding="5dp" />
                                    </com.ms.square.android.expandabletextview.ExpandableTextView>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.1dp"
                                        android:background="@color/gray"></View>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="@string/category"
                                        android:textSize="16dp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tv_category"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="Electronics"
                                        android:textSize="13dp"
                                        android:visibility="gone" />


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="@string/tag"
                                        android:textSize="16dp"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/tv_tag"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="5dp"
                                        android:text="#BestSeller"
                                        android:textSize="13dp" />
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/padding_10"
                                android:layout_marginTop="40dp"
                                android:layout_marginRight="@dimen/padding_10"
                                android:orientation="vertical"
                                android:visibility="gone"

                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="@dimen/padding_10"
                                    android:gravity="center_vertical"
                                    android:padding="5dp"
                                    android:text="@string/price"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/tv_price_range_detail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="\u00A5 120 - \u00A5 200"
                                    android:textSize="13dp"

                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.2dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/gray"></View>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="@dimen/padding_10"
                                        android:gravity="center_vertical"
                                        android:text="@string/location"
                                        android:textSize="16dp" />
                                </RelativeLayout>


                                <TextView
                                    android:id="@+id/tv_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Shramasafaly colony,karve nagar, pune"
                                    android:textSize="13dp"

                                    />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.2dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/gray"></View>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="@dimen/padding_10"
                                        android:gravity="center_vertical"
                                        android:text="@string/website"
                                        android:textSize="16dp" />
                                </RelativeLayout>


                            </LinearLayout>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding_10"
                            android:background="@color/white"
                            android:padding="@dimen/padding_10"
                            android:text="@string/products"
                            android:visibility="gone" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_shop_products"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:paddingBottom="40dp"></android.support.v7.widget.RecyclerView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <Button
                                android:id="@+id/btn_back"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/button_shape_black"
                                android:text="@string/go_back"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/btn_submit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_margin="5dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:layout_weight="0.5"
                                android:background="@drawable/button_shape_black"
                                android:text="@string/submit"
                                android:textColor="@color/white" />
                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <ProgressBar
        android:id="@+id/p_bar"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>