<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"

        android:background="@color/background"
        android:layout_marginTop="@dimen/padding_10"

        ></View>
